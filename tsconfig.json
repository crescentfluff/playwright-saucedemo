{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "playwright"
        ],
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@data/*": [
                "src/model/data/*"
            ],
            "@enums/*": [
                "src/model/enums/*"
            ]
        }
    },
    "include": [
        "playwright.config.ts",
        "tests/**/*.ts",
        "src/**/*.ts"
    ]
}